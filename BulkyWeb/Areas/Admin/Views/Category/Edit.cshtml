@model Category

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3">
            <input asp-for="Name" placeholder="Category Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <input asp-for="DisplayOrder" placeholder="Display Order" class="form-control"></input>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-warning form-control" asp-controller="Category" asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

