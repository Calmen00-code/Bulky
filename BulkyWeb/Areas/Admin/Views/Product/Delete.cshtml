@model Product

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        <div class="row mb-3">
            <input asp-for="Title" disabled placeholder="Product Title" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="Description" disabled placeholder="Description" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="ISBN" disabled placeholder="ISBN" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="Author" disabled placeholder="Author" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="ListPrice" disabled placeholder="ListPrice" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="Price" disabled placeholder="Price" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="Price50" disabled placeholder="Price50" class="form-control" />
        </div>
        <div class="row mb-3">
            <input asp-for="Price100" disabled placeholder="Price100" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
