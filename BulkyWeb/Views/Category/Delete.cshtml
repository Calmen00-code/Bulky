@model Category

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <label class="text-secondary">Category Name</label>
        <label asp-for="Name" class="form-control mb-3">@Model.Name</label>
        <label class="text-secondary">Display Order</label>
        <label asp-for="DisplayOrder" class="form-control mb-3">@Model.DisplayOrder</label>

        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
